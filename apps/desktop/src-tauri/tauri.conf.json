{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Coinbox",
  "version": "2.0.0",
  "identifier": "com.coinbox.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Coinbox",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [],
    "resources": [],
    "category": "Finance",
    "shortDescription": "Multi-chain portfolio intelligence platform",
    "longDescription": "Coinbox is a local-first, multi-chain cryptocurrency portfolio tracker with AI-powered transaction categorization and comprehensive tax reporting."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
